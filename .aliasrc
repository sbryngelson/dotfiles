alias ff="fdd -t f . | fzf"

# v - open files in ~/.viminfo
v() {
    local files
    if [ $# -eq 0 ]; then
        if [ -f /usr/local/bin/fzf ] || [ -f $HOME/.fzf/BUILD.md ]; then
            files=$(grep '^>' ~/.viminfo | cut -c3- |
                while read line; do
                    [ -f "${line/\~/$HOME}" ] && echo "$line"
                done | fzf-tmux -d -m -q "$*" -1)
                #cd $(dirname ${files}) > /dev/null
                vim ${files//\~/$HOME}
        else
            vim
        fi
    else
        vim $@
    fi
}

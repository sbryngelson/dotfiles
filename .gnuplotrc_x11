myplot () {
local arg="w l"
local str="set term x11 size 900,500 '
set format y '%g'
set datafile separator ","
plot"
while [ $# -gt 0 ]
        do str="$str '$1' $arg,"
        shift
done
echo "$str" | gnuplot -persist
}

myplots () {
local arg="using 1:$1 w l"
local str="set term x11 size 900,500 '
set format y '%g'
plot"
while [ $# -gt 1 ]
        do str="$str '$2' $arg,"
        shift
done
echo "$str" | gnuplot -persist
}

animate1d () {
local arg="w l"
local str="set term x11 size 900,500'
set format y '%g'
"
local its=$1
local files=" "
while [ $# -gt 1 ]
        do #str="$str '$2' $arg,"
           files="$files $2"
        shift
done
local counter=1
local newfiles=$files
while [ $counter -le $its ]
    do
        newfiles="$newfiles $files"
        ((counter++))
done
local plt="filelist= '$newfiles'
do for [filename in filelist] { plot filename using 1:2; pause 0.5 }
"
echo "$str $plt" | gnuplot -persist
}

animate2d () {
local arg="w l"
local str="
set term x11
set autoscale xy
set size ratio -1
set format y '%g'
"
local its=$1
local files=" "
while [ $# -gt 1 ]
        do #str="$str '$2' $arg,"
           files="$files $2"
        shift
done
local counter=1
local newfiles=$files
while [ $counter -le $its ]
    do
        newfiles="$newfiles $files"
        ((counter++))
done
local plt="filelist= '$newfiles'
do for [filename in filelist] { plot filename with image; pause 0.5 }
"
echo "$str $plt" | gnuplot -persist
}
